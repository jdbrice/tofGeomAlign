<config>

	<!-- perform the geometry alignment -->
	<jobType>calibrate</jobType>

	<input>
		<root>pass1/qa.root</root>
		<geometry>pass0/geometry.txt</geometry>	
	</input>

	<output>
		<baseName>pass1/</baseName>
		<root>qaFit</root>
		<report>qa.pdf</report>
		<geometry>geometry.txt</geometry>
	</output>
	
	<!-- cuts to apply -->
	<ptCut>0.5</ptCut>
	<vzCut>30.0</vzCut>
	<minHitsFit>25</minHitsFit>
	<fitZMinHits>10</fitZMinHits>

	<!-- Rebinning on the histos - can help with low statistics but be careful
		This can cause the alignment to be off -->
	<rebinY>1</rebinY>
	<rebinZ>1</rebinZ>

</config>
